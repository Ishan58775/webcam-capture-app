<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Favicon link -->
<link rel="icon" type="tab.png" href="/views
/tab.png">
<title>Enter Name</title>
<style>
body { font-family: Arial, sans-serif; padding: 30px; background: #f9f9f9; }
input, button { padding: 10px; font-size: 16px; margin: 5px 0; }
#output { margin-top: 20px; }
</style>
</head>
<body>
<h2>Enter Your Name</h2>
<input type="text" id="name" placeholder="Enter name" />
<button onclick="generateLink()">Generate Link</button>

<div id="output"></div>

<script>
function generateLink() {
    const name = document.getElementById("name").value.trim();
    if (!name) return alert("Please enter a name!");

    const link = `${window.location.origin}/capture?name=${encodeURIComponent(name)}`;
    document.getElementById("output").innerHTML = `
        <p><strong>Name:</strong> ${name}</p>
        <p><strong>Shareable Link:</strong> <a href="${link}" target="_blank">${link}</a></p>
    `;
}
</script>
</body>
</html>
